<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_15sdp"
        app:strokeWidth="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="@dimen/_100sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:paddingBottom="@dimen/_100sdp">
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/close"/>
            <!-- Category List -->
    <!-- Title Section -->
    <TextView
        android:id="@+id/tv_settings_title"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textStyle="bold"
        android:textSize="@dimen/_14ssp"
        android:paddingBottom="@dimen/_15sdp" />

    <!-- Widgets Section -->
    <TextView
        android:id="@+id/tv_widgets_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIDGETS"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:textSize="@dimen/_12ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/_6sdp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_widgets"
            android:contentDescription="Widgets Icon" />

        <TextView
            android:id="@+id/tv_install_widgets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="How to install widgets"
            android:textSize="@dimen/_12ssp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Notifications Section -->
    <TextView
        android:id="@+id/tv_notifications_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTIFICATIONS"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:textSize="@dimen/_12ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/_6sdp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/share"
            android:contentDescription="Notifications Icon" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Share App"
            android:textSize="@dimen/_12ssp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Other Section -->
    <TextView
        android:id="@+id/tv_other_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTHER"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:textSize="@dimen/_12ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/_6sdp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_help"
            android:contentDescription="Help Icon" />

        <TextView
            android:id="@+id/tv_help_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Help and Feedback"
            android:textSize="@dimen/_12ssp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/_6sdp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_rate_app"
            android:contentDescription="Rate App Icon" />

        <TextView
            android:id="@+id/tv_rate_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Rate app"
            android:textSize="@dimen/_12ssp"
            android:textColor="@android:color/black" />
    </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"/>
        </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
